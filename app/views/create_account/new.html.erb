<div class="container">
    <h1 class="center">Create Account</h1>
    
    <div class="row">
        
        <%= form_for(:user, :url => {:controller => 'create_account', :action => 'create'}) do |f| %>
            <p> Email:</br> <%= f.text_field :email%> </p>
            <p> Password:</br> <%= f.password_field :password%></p>
            <!--<p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>-->
            <p> Preferred Name:</br> <%= f.text_field :preferred_name%> </p>
            <p> Phone Number:</br> <%= f.text_field :phone_number%> </p>
            <%= f.submit :Signup %>
        <% end %>
        
        <% if @user.errors.any? %>
	        <ul class="Signup_Errors">
		        <% for message_error in @user.errors.full_messages %>
			        <li>* <%= message_error %></li>
	  	        <% end %>
	        </ul>
        <% end %>
    
    </div>
</div>
        

