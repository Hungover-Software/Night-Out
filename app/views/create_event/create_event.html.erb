<div class="container">
    <h1 class="center">Create Event</h1>
    <div class="row">
        <form>
            <div class="input-field col s12">
                <label for="event_name">Event Name</label>
                <input id="event_name" type="text" class="validate">
            </div>
            <div class="col s12">
                <label for="event_date">Event Date</label>
                <input id="event_date" type="date" class="validate">
            </div>
            <div class="col s12">
                <label for="event_time">Event Time</label>
                <input id="event_time" type="time" class="validate">
            </div>
            <div class="input-field col s12">
                <label for="event_location">Event Location</label>
                <input id="event_location" type="text" class="validate">
            </div>
            <div class="col s12">
                 <a class="waves-effect waves-light btn" href="/create_event/create_event">Submit</a>
        
            </div>
        
        </form>
        
    </div>
</div>
