<div class="container">
    <h1 class="center">Create Event</h1>
    <div class="row">
        <%= form_for(:user, :url => {:controller => 'event', :action => 'create'}, :html => {:class => 'col s12'}) do |f| %>
            <div class="input-field col s12">
                <label for="event_name">Event Name</label>
                <%= f.text_field :name, :id => 'event_name', :class => 'validate' %>
            </div>
            <div class="col s12">
                <label for="event_date">Event Date</label>
                <%= f.text_field :date, :id => 'event_date', :class => 'validate datepicker' %>
            </div>
            <div class="col s12">
                <label for="event_time">Event Time</label>
                <%= f.text_field :time, :id => 'event_time', :class => 'validate timepicker' %>
            </div>
            <div class="col s12">
                 <%= button_tag(type: 'submit', class: "waves-effect waves-light btn col s12 blue-grey lighten-1") do %>
                    Create Event
                <% end %>
            </div>
        
        <% end %>
        
    </div>
    
    <script>
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15, // Creates a dropdown of 15 years to control year,
            today: 'Today',
            clear: 'Clear',
            close: 'Ok',
            closeOnSelect: false // Close upon selecting a date,
        });
        
        $('.timepicker').pickatime({
            default: 'now', // Set default time: 'now', '1:30AM', '16:30'
            fromnow: 0,       // set default time to * milliseconds from now (using with default = 'now')
            twelvehour: true, // Use AM/PM or 24-hour format
            donetext: 'OK', // text for done-button
            cleartext: 'Clear', // text for clear-button
            canceltext: 'Cancel', // Text for cancel-button
            autoclose: false, // automatic close timepicker
            ampmclickable: true, // make AM PM clickable
            aftershow: function(){} //Function for after opening timepicker
          });
    </script>
</div>
