<div class="container">
    <br><br>
    <div class="row">
        <%= link_to "Create an Event", '/new_event', :class => "waves-effect waves-light btn col s12 blue-grey lighten-1" %>
    </div>
    <h2>Upcoming Events</h2>
    <% if @events != [] %>
        <ul class="collection">
            <% @events.each do |event| %>
                <li class="collection-item">
                    <%= link_to(event) do %>
                        <div class="row" style="margin-bottom: 0; color: black;">
                            <div class="col s3 blue-grey lighten-4">
                                <center>
                                    <h5><%= event.date.strftime("%b #{event.date.day.ordinalize}") %></h5>
                                    <p><%= event.time.strftime('%I:%M %p') %></p>
                                </center>
                            </div>
                            <div class="col s9">
                                <h4><%= event.name %></h4>
                            </div>
                        </div>
                    <% end %>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p>You have no events! Create a new one or ask to be invited to one.</p>
    <% end %>
</div>
