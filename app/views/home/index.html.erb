<div class="container">
    <br><br>
    <div class="row">
        <%= link_to "Create an Event", '/new_event', :class => "waves-effect waves-light btn col s12 blue-grey lighten-1" %>
    </div>
    <h2>Upcoming Events</h2>
    <% if @events != [] %>
        <ul class="collection">
            <% @events.each do |event| %>
                <li class="collection-item">
                    <a href="#" style="color: black;">
                        <div class="row" style="margin-bottom: 0;">
                            <div class="col s2 blue-grey lighten-4">
                                <center>
                                    <h5><%= event.date.strftime('%b') %></h5>
                                    <p><%= event.date.day.ordinalize %></p>
                                </center>
                            </div>
                            <div class="col s10">
                                <h4><%= event.name %></h4>
                            </div>
                        </div>
                    </a>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p>You have no events! Create a new one or ask to be invited to one.</p>
    <% end %>
</div>